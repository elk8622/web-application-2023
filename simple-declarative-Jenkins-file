                sh 'echo SCM Checkout step'
            }
        }
        stage('Build-Test') {
            steps {
                sh 'echo Build-Test step'
            }
        }
        stage('Archive') {
            steps {
                sh 'echo Archive step'
            }
        }
    }
}
